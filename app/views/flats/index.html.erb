<div class="container my-3 ">
    <h1>All our Flats</h1>
    <p>All <%= @flats.count %> flats.</p>
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-4">
          <div class="card m-2" style="width: 18rem;">
            <img class="card-img-top" src="<%= image_path 'flat.jpeg'%>"" alt="Flat image">
            <div class="card-body">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-text"><%= flat.address %></p>
              <div class="row">
                <div class="col-6">
                  <p><i class="fas fa-user-friends"></i>   <%= flat.number_of_guests %></p>
                </div>
                <div class="col-6">
                  <p><i class="fas fa-euro-sign"></i>   <%= flat.price_per_night %></p>
                </div>
              </div>
              <div class="links">
                <%= link_to "More Info", flat_path(flat) %>
                <%= link_to "Edit", edit_flat_path(flat), class: "edit"%>
                <%= link_to "Remove", flat_path(flat), method: :delete, class: "delete" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>